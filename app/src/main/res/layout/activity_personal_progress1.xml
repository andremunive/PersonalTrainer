<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".data.userProgress.addNewProgress.personalProgress1">

    <TextView
        android:id="@+id/reportTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/alegreya_italic"
        android:text="Progreso"
        android:textColor="@color/naranja"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reportTitle"
        android:fontFamily="@font/alegreya_italic"
        android:text="1/4"
        android:textColor="@color/naranja"
        android:textSize="28sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>



        <EditText
            android:id="@+id/weekTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:hint="Semana"
            android:textColorHint="#fff"
            android:inputType="number"
            android:textSize="30sp"
            android:fontFamily="@font/alegreya_italic"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="3dp"
            android:gravity="center_horizontal"
            android:backgroundTint="@color/naranja"/>

    <EditText
        android:id="@+id/dateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:hint="Fecha"
        android:textColorHint="#fff"
        android:inputType="number"
        android:textSize="30sp"
        android:fontFamily="@font/alegreya_italic"
        android:layout_below="@+id/weekTxt"
        android:backgroundTint="@color/naranja"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="3dp"/>

    <EditText
        android:id="@+id/pesoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:hint="Peso"
        android:textColorHint="@color/blanco"
        android:inputType="numberDecimal"
        android:textSize="30sp"
        android:fontFamily="@font/alegreya_italic"
        android:layout_below="@+id/dateTxt"
        android:gravity="center_horizontal"
        android:backgroundTint="@color/naranja"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="3dp"/>


        <ImageView
            android:id="@+id/next"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_buttom_circle_orange"
            android:onClick="nextClick"
            android:layout_below="@id/pesoTxt"
            android:layout_centerHorizontal="true"
            android:scaleType="center"
            android:src="@drawable/next" />





  </RelativeLayout>